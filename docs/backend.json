{
  "entities": {
    "Article": {
      "title": "Article",
      "type": "object",
      "description": "AIによって要約・翻訳されたテックニュース記事",
      "properties": {
        "title": { "type": "string" },
        "summary": { "type": "string" },
        "link": { "type": "string", "format": "uri" },
        "sourceName": { "type": "string" },
        "imageUrl": { "type": "string", "format": "uri" },
        "publishedAt": { "type": "string", "format": "date-time" },
        "category": { "type": "string" }
      },
      "required": ["title", "link", "sourceName"]
    },
    "Source": {
      "title": "Source",
      "type": "object",
      "description": "ユーザーが追加したカスタムRSSフィード設定",
      "properties": {
        "name": { "type": "string" },
        "url": { "type": "string", "format": "uri" },
        "category": { "type": "string" }
      },
      "required": ["name", "url"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/articles/{articleId}": {
      "schema": "Article",
      "description": "公開されているニュース記事の蓄積場所"
    },
    "/users/{userId}/sources/{sourceId}": {
      "schema": "Source",
      "description": "各ユーザー専用のRSSソース設定"
    }
  }
}