
{
  "entities": {
    "Source": {
      "title": "ニュースソース",
      "description": "ユーザーが追加したカスタムRSSフィード情報",
      "type": "object",
      "properties": {
        "name": { "type": "string", "description": "ソース名" },
        "url": { "type": "string", "description": "RSSフィードのURL" },
        "category": { "type": "string", "enum": ["Reliable", "Discovery", "Custom"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "url", "category"]
    },
    "Article": {
      "title": "記事",
      "description": "RSSから取得された共通の記事情報",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "content": { "type": "string" },
        "summary": { "type": "string" },
        "url": { "type": "string" },
        "sourceName": { "type": "string" },
        "publishedAt": { "type": "string", "format": "date-time" },
        "imageUrl": { "type": "string" },
        "category": { "type": "string" }
      },
      "required": ["title", "url", "sourceName", "publishedAt"]
    },
    "Bookmark": {
      "title": "ブックマーク",
      "description": "ユーザーが保存した記事",
      "type": "object",
      "properties": {
        "articleId": { "type": "string" },
        "title": { "type": "string" },
        "url": { "type": "string" },
        "sourceName": { "type": "string" },
        "bookmarkedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["articleId", "title", "url", "sourceName"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}/sources/{sourceId}": {
      "schema": "Source",
      "description": "ユーザー個別のカスタムニュースソース"
    },
    "/articles/{articleId}": {
      "schema": "Article",
      "description": "システム全体で共有されるRSS記事データ"
    },
    "/users/{userId}/bookmarks/{bookmarkId}": {
      "schema": "Bookmark",
      "description": "ユーザーが保存した記事一覧"
    }
  }
}
